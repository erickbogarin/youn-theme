/** @component menu-nav */

.site-nav
  cursor auto

  position absolute
  top 0
  right -100%

  width 100%
  height 100%

  transition: .2s ease

  z-index: 3;

  +tablet()
    width 40%

  +desktop()
    width 20%

  &.is-visible
    right 0

  > .title
    margin-left 10px
    +above('s')
      text-align center
      margin-left 0

  > .close
    cursor pointer
    position absolute
    top 15px
    right 10px

    +above('s')
      top 10px
      left -40px
