/** @component search-form */

.search-dialog
  box-sizing border-box
  color $gray-lighter

  margin-top 40px
  width 80%

  z-index 3

  +mobile()
    margin-top 80px

  > .field
    background-color transparent
    border 0
    border-bottom 1px solid #fff
    border-radius 0
    background-clip padding-box
    color $white

    &:focus
      outline 0
      box-shadow none

  > .close
    position absolute
    top -40px
    right 0

    +mobile()
      size(40, 40)

    +tablet()
      size(25, 25)
