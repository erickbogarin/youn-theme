//
// Text
//

// Alignment

.text-justify
  text-align justify !important
.text-nowrap
  white-space nowrap !important
.text-center
  text-align center

// Transformation

.text-lowercase
  text-transform lowercase !important
.text-uppercase
  text-transform uppercase !important
.text-capitalize
  text-transform capitalize !important

// Contextual colors

.text-white
  color $white !important

.text-link
  color $link-color
